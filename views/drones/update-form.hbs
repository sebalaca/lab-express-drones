<h2>Update the drone</h2>
{{#with response}}
<form action="/drones/{{_id}}/edit" method="POST">
    <label for="name">Name:</label>
    <input type="text" value={{name}} name="name">
    
    <label for="propellers">Propellers:</label>
    <input type="number" value={{propellers}} name="propellers">

    <label for="max-speed">MaxSpeed:</label>
    <input type="number" value={{maxSpeed}} name="maxSpeed">
    
    <button type="submit">Update Drone</button>
</form>
{{/with}}

